{
  "name": "adilhyz.github.io",
  "version": "0.0.0",
  "description": "Doks theme",
  "author": "Adilhyz",
  "license": "MIT",
  "scripts": {
    "init": "shx rm -rf .git && git init -b main",
    "create": "exec-bin node_modules/.bin/hugo/hugo new",
    "prestart": "npm run clean",
    "dev": "exec-bin node_modules/.bin/hugo/hugo server --bind=0.0.0.0 --disableFastRender --baseURL=http://localhost --noHTTPCache",
    "dev:drafts": "exec-bin node_modules/.bin/hugo/hugo server --bind=0.0.0.0 --disableFastRender --baseURL=http://localhost --noHTTPCache --buildDrafts",
    "lint": "npm run lint:scripts && npm run lint:styles && npm run lint:markdown",
    "lint:js": "eslint assets/js config functions",
    "lint:css": "stylelint \"assets/scss/**/*.{css,sass,scss,sss,less}\"",
    "lint:md": "markdownlint \"*.md\" \"content/**/*.md\"",
    "lint:scripts": "eslint --cache assets/js",
    "lint:styles": "stylelint --cache \"assets/scss/**/*.{css,sass,scss}\"",
    "lint:markdown": "markdownlint-cli2 \"*.md\" \"content/**/*.md\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "exec-bin node_modules/.bin/hugo/hugo --minify",
    "preview": "http-server --gzip --brotli --ext=html --cors",
    "clean": "npm run clean:build && npm run clean:lint && npm run clean:install",
    "clean:build": "shx rm -rf public resources .hugo_build.lock",
    "clean:install": "shx rm -rf node_modules package-lock.json yarn.lock pnpm-lock.yaml",
    "clean:lint": "shx rm -rf .eslintcache .stylelintcache",
    "preinfo": "npm version",
    "info": "npm list",
    "postinfo": "exec-bin node_modules/.bin/hugo/hugo version",
    "postinstall": "hugo-installer --version otherDependencies.hugo --extended --destination node_modules/.bin/hugo",
    "copy:katex-fonts": "shx cp ./node_modules/katex/dist/fonts/* ./static/fonts/",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "server": "exec-bin node_modules/.bin/hugo/hugo server",
    "check": "exec-bin node_modules/.bin/hugo/hugo version"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@fullhuman/postcss-purgecss": "^4.0",
    "@tabler/icons": "^3.1.0",
    "auto-changelog": "^2.3.0",
    "autoprefixer": "^10.4.19",
    "bootstrap": "^5.3.3",
    "clipboard": "^2.0",
    "eslint": "^8.0",
    "exec-bin": "^1.0.0",
    "flexsearch": "^0.7.21",
    "gethyas": "^2.2.2",
    "highlight.js": "^11.2",
    "hugo-installer": "^4.0.1",
    "instant.page": "^5.1",
    "katex": "^0.13",
    "lazysizes": "^5.3",
    "markdownlint-cli": "^0.29",
    "mermaid": "^8.13",
    "node-fetch": "^3.0",
    "postcss": "^8.3",
    "postcss-cli": "^9.0",
    "purgecss-whitelister": "^2.4",
    "shx": "^0.3.4",
    "stylelint": "^13.13",
    "stylelint-config-standard": "^22.0"
  },
  "otherDependencies": {
    "hugo": "0.123.7"
  },
  "overrides": {
    "semver": "^7.5.4"
  },
  "engines": {
    "node": ">=18.14.1",
    "pnpm": ">=8.10.0"
  },
  "packageManager": "pnpm@8.12.0"
}
